<Calculator>:
    BoxLayout:
        orientation: 'vertical'
        TopMenu:
        Abacus:
        BoxLayout:
            orientation: 'horizontal'
            Ledger:
            OperationsBar:
            CuneiformDrawingInput:

<TopMenu>:
    size_hint_y: None
    height: 32
    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            size: self.size
            pos: self.pos

<Abacus>:
    canvas:
        Color:
            rgb: 0, 1, 0
        Rectangle:
            size: self.size
            pos: self.pos

<Ledger>:
    size_hint_x: 1.6
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: map(lambda a: a + 7, self.pos)
            size: map(lambda a: a - 14, self.size)
            source: 'assets/graphics/sandstone.jpg'  # TODO: make this platform independent?
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.7
        Rectangle:
            size: self.size
            pos: self.pos

<OperationsBar>:
    size_hint_x: None
    width: 48
    canvas:
        Color:
            rgb: 1, 1, 0
        Rectangle:
            size: self.size
            pos: self.pos

<CuneiformDrawingInput>:
    canvas:
        Color:
            rgb: 0, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
